{
    "name": "shadix-ui",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "build": "pnpm run registry:build && pnpm run build",
        "dev": "next dev --turbo",
        "start": "next start",
        "postinstall": "fumadocs-mdx",
        "registry:build": "shadcn build && tsx scripts/build-registry.ts && biome format --write registry/__index__.tsx",
        "format": "biome format --write .",
        "format:check": "biome format .",
        "lint": "biome lint .",
        "lint:fix": "biome lint --write .",
        "check": "biome check --write .",
        "check:ci": "biome ci .",
        "prepare": "husky",
        "pre-commit": "lint-staged",
        "build:all": "pnpm run registry:build && pnpm run build",
        "dev:setup": "pnpm install && pnpm run registry:build"
    },
    "dependencies": {
        "@radix-ui/react-alert-dialog": "^1.1.15",
        "@radix-ui/react-collapsible": "^1.1.12",
        "@radix-ui/react-dialog": "^1.1.15",
        "@radix-ui/react-dropdown-menu": "^2.1.16",
        "@radix-ui/react-scroll-area": "^1.2.10",
        "@radix-ui/react-separator": "^1.1.7",
        "@radix-ui/react-slot": "^1.2.3",
        "@radix-ui/react-tabs": "^1.1.13",
        "@radix-ui/react-tooltip": "^1.2.8",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "framer-motion": "^12.23.24",
        "fumadocs-core": "15.8.5",
        "fumadocs-mdx": "12.0.3",
        "fumadocs-typescript": "^4.0.11",
        "fumadocs-ui": "15.8.5",
        "lucide-react": "^0.544.0",
        "next": "15.5.4",
        "next-themes": "^0.4.6",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "shiki": "^3.13.0",
        "sonner": "^2.0.7",
        "tailwind-merge": "^3.3.1",
        "ts-morph": "^27.0.2",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@biomejs/biome": "2.2.6",
        "@tailwindcss/postcss": "^4.1.14",
        "@types/mdx": "^2.0.13",
        "@types/node": "24.6.2",
        "@types/react": "^19.2.0",
        "@types/react-dom": "^19.2.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.4",
        "postcss": "^8.5.6",
        "shadcn": "2.9.3-canary.0",
        "tailwindcss": "^4.1.14",
        "tsx": "^4.20.6",
        "tw-animate-css": "^1.4.0",
        "typescript": "^5.9.3"
    },
    "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a",
    "lint-staged": {
        "*.{js,jsx,ts,tsx,json,css}": [
            "biome check --write --no-errors-on-unmatched"
        ],
        "registry.json": [
            "pnpm run registry:build"
        ],
        "registry/__index__.tsx": [
            "biome format --write"
        ],
        "public/r/*.json": []
    },
    "engines": {
        "node": ">=20"
    }
}
